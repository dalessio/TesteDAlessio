@model TesteDAlessio.UI.WebApp.Models.SQSTesteModel

@{
    ViewData["Title"] = "SQS Teste";
}

<h1>Lista de Mensagens AWS SQS</h1>

<form asp-action="Index">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="MessageBody" class="control-label"></label>
        <div class="input-group">
            <input asp-for="MessageBody" class="form-control width100" /></>
            <span class="input-group-btn"><input type="submit" value="Enviar Mensagem" class="btn btn-primary" /></span>
        </div>
        <span asp-validation-for="MessageBody" class="text-danger"></span>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Message.MessageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message.ReceiptHandle)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Messages != null)
        {
            foreach (var item in Model.Messages)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MessageId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReceiptHandle)
                    </td>
                </tr>
            } }
    </tbody>
</table>
